@{
    @model Forum.Models.Elève;
    <head>
        <link rel="stylesheet" href="~/css/signup.css" asp-append-version="true" />
    </head>
    //fORMULAIRE D'INSCRIPTION
    <form method="post">

    <h1>S'inscrire</h1>

        <label for="Nom">Nom :</label><input type="text" id="Nom" name="Nom" />
        <p style="color: red">@Html.ValidationMessageFor(e => e.Nom)</p>

        <label for="Prenom">Prénom :</label><input type="text" id="Prenom" name="Prenom" />
        <p style="color: red">@Html.ValidationMessageFor(e => e.Prenom)</p>

        <label for="Mail">Email :</label><input type="email" id="Mail" name="Mail"/>
        <p style="color: red">@Html.ValidationMessageFor(e => e.Email)</p>

        <label for="Password">Mot de passe :</label><input type="password" id="Password" name="Password" />
        <p style="color: red">@Html.ValidationMessageFor(e => e.Password)</p>

            <button type="submit">S'inscrire</button>

    </form>
}
