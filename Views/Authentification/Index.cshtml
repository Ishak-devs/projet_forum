@model Forum.Models.LoginViewModel

@{
    ViewData["Title"] = "Connexion";
    if (ViewBag.Messagesuccess != null)
    {
        <div class="alert alert-success">
            @ViewBag.Messagesuccess
        </div>
    }

    if (ViewBag.MessageError != null)
    {
        <div class="alert alert-danger">
            @ViewBag.MessageError
        </div>
    }
    
    if (ViewBag.Message_error_email != null)
    {
        <div class="alert alert-danger">
            @ViewBag.Message_error_email
        </div>
    }

    <div class="container mt-4">
        <form class="card p-4 shadow" method="post">

            <h1 class="text-center mb-4">Se connecter</h1>

            <div class="mb-3">
                <label class="form-label" asp-for="Email">Email :</label>
                <input class="form-control" type="text" asp-for="Email"/>
                <span class="text-danger">@Html.ValidationMessageFor(e => e.Email)</span>
            </div>

            <div class="mb-3">
                <label class="form-label" asp-for="Password">Mot de passe :</label>
                <input class="form-control"type="text" asp-for="Password"/>
                <span class="text-danger">@Html.ValidationMessageFor(e => e.Password)</span>
            </div>

            <div class="mb-3">
                <label class="form-label">Rôle :</label>
                <div class="form-check">
                    <input type="radio" id="eleve" class="form-check-input" name="Role" value="Elève" asp-for="Role"/>
                    <label for="eleve" class="form-check-label" asp-for="Role">Élève</label>
                </div>
                <div class="form-check">
                    <input type="radio" id="prof" class="form-check-input" name="Role" value="Professeur" asp-for="Role"/>
                    <label for="prof" class="form-check-label" asp-for="Role">Prof</label>

                </div>
                <span class="text-danger">@Html.ValidationMessageFor(r => r.Role)</span>
            </div>
                
                <button class="btn btn-primary w-100" type="submit">Se connecter</button>

        </form>
    </div>

    
}